{
  "name": "online-auction",
  "version": "0.1.0",
  "repository": "https://github.com/phineasla-hcmus/3.1-Web-Online-Auction",
  "license": "MIT",
  "scripts": {
    "build-node": "tsc",
    "build-sass": "sass public/scss:public/css",
    "build": "npm run build-node && npm run build-sass",
    "start": "node dist/server.js",
    "watch-node": "nodemon -r dotenv/config app/server.ts",
    "watch-sass": "sass --watch public/scss:public/css",
    "watch": "concurrently -k -n \"Sass,Node\" -c \"cyan,blue\" \"npm run watch-sass\" \"npm run watch-node\""
  },
  "dependencies": {
    "@types/compression": "^1.7.2",
    "async": "^3.2.2",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-handlebars": "^6.0.1",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0",
    "sass": "^1.43.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/async": "^3.2.10",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "concurrently": "^6.4.0",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
