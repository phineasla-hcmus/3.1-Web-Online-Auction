<section class="login">
  <div class="row justify-content-center m-0">
    <div class="col-md-7 col-lg-5">
      <div class="auth-wrap p-4 p-md-5">
        <div class="d-flex">
          <div class="w-100">
            <h3 class="mb-4">Sign In</h3>
          </div>
          <div class="w-100">
            <p class="social-media d-flex justify-content-end">
              <a
                href="/error"
                class="social-icon d-flex align-items-center justify-content-center"
              ><span class="fa fa-facebook"></span></a>
              <a
                href="/error"
                class="social-icon d-flex align-items-center justify-content-center"
              ><span class="fa fa-google"></span></a>
            </p>
          </div>
        </div>
        <!-- Login Form -->
        <form action="/login" method="POST">

          <!-- Email -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-envelope"></span>
            </div>
            <input
              id="email"
              type="email"
              name="email"
              placeholder="Email"
              class="form-control border-left-0 border-md"
              required
            />
          </div>

          <!-- Password -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-lock"></span>
            </div>
            <input
              id="password"
              type="password"
              name="password"
              placeholder="Password"
              class="form-control border-left-0 border-md"
              required
            />
          </div>

          <div class="form-group d-flex align-items-center">
            <!-- Remember me -->
            <div class="w-100">
              <input type="checkbox" id="rememberMe" />
              <label for="rememberMe">Remember me</label>
            </div>
            <!-- Submit -->
            <div class="w-100 d-flex justify-content-end">
              <button
                type="submit"
                class="btn btn-primary rounded submit g-recaptcha"
              >
                Login
              </button>
            </div>
          </div>
          <div class="form-group mt-4">
            <div class="w-100 text-center">
              <p class="mb-1">Don't have an account?
                <a href="/signup">Sign Up</a></p>
              <p><a href="/error">Forgot Password</a></p>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

{{#section "scripts"}}
  <script src="/public/js/login.js"></script>
{{/section}}