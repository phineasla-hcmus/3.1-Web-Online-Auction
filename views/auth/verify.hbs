<section class="verify">
  <div class="row justify-content-center m-0">
    <div class="col-md-7 col-lg-5">
      <div class="auth-wrap p-4 p-md-5">
        <div class="d-flex">
          <div class="w-100">
            <h3>Verify its you</h3>
            <p class="mb-4">
              We've set an email to
              <b>{{user.email}}</b>
              to verify your email address and activate your account
            </p>
          </div>
        </div>
        <!-- Verify Form -->
        <form action="/verify" method="POST">
          <div class="row">
            <!-- Verification Code -->
            <div class="input-group col-lg-12 mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text icon fa fa-check"></span>
              </div>
              <input
                id="code"
                type="text"
                name="code"
                placeholder="Enter verification code"
                class="form-control border-left-0 border-md"
                required
              />
            </div>
          </div>
          <div class="row">
            <!-- Submit Button -->
            <div class="form-group col-lg-6 mx-auto">
              <button
                type="submit"
                class="btn btn-primary btn-block py-2 submit"
              >
                Submit
              </button>
            </div>
            <!-- Resend Email Button -->
            <div class="form-group col-lg-6 mx-auto">
              <button
                type="button"
                class="btn btn-secondary btn-block py-2 submit"
              >
                Resend email
              </button>
            </div>
          </div>
          <div class="form-group mt-4">
            <div class="w-100 text-center">
              {{! TODO: cannot POST }}
              <p class="mb-1">Not you? <a href="/logout">Sign out</a></p>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>