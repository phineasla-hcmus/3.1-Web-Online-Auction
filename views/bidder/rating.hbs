<h1 class="h3 text-center">My rating</h1>
<p class="h4 ms-4">
  <i class="fa fa-star text-warning" aria-hidden="true"></i>
  Rating: 8 (10 reviews)
</p>
<div class="rating__content ms-3">
  {{#each ratingList as |ratingItem|}}
    <div class="rating__item p-3">
      <div style="gap: 1.25rem" class="d-flex">
        <p style="font-size: 2rem;" class="rating__title">
          <i class="fa fa-user-circle" aria-hidden="true"></i>
        </p>
        <div>
          <p class="mb-0 fw-bold">{{ratingItem.assessorName}}</p>
          <p class="text-info">{{ratingItem.proName}}</p>
          {{#if ratingItem.satisfied}}
            <p class="text-success">Satisfied
              <i class="fa fa-thumbs-up" aria-hidden="true"></i></p>
          {{else}}
            <p class="text-danger">Dissatisfied
              <i class="fa fa-thumbs-down" aria-hidden="true"></i>
            </p>
          {{/if}}

          <p>{{ratingItem.comment}}</p>
          <small class="text-secondary">{{ratingItem.assessorTime}}</small>
        </div>
      </div>
      <hr />
    </div>
  {{/each}}

</div>