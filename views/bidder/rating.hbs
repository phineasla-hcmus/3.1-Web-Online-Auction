<div style="background-color: white;" class="rounded-3 p-4">
  <h1 class="h3 fw-bold">My rating</h1>
  <p class="h4">
    {{#if empty}}
      <div class="alert alert-info">You have not received any rates yet </div>
    {{else}}
      <i class="fa fa-star text-warning" aria-hidden="true"></i>
      Rating:
      {{ratingPoint}}
      ({{rateNums}}
      reviews)
    {{/if}}
  </p>
  <div class="rating__content">
    {{#each ratingList as |ratingItem|}}
      <div class="rating__item p-3 mb-3">
        <div style="gap: 1.25rem" class="d-flex">
          <div>
            <p class="mb-0 fw-bold">{{ratingItem.rateName}}</p>
            {{#if ratingItem.satisfied}}
              <p class="text-success">Satisfied
                <i class="fa fa-thumbs-up" aria-hidden="true"></i></p>
            {{else}}
              <p class="text-danger">Dissatisfied
                <i class="fa fa-thumbs-down" aria-hidden="true"></i>
              </p>
            {{/if}}
            <p class="text-secondary mb-0"><span>[{{ratingItem.catName}}]</span>
              {{ratingItem.proName}}</p>

            <p class="mb-0">{{ratingItem.comment}}</p>
            <small style="font-size: 0.7rem;" class="text-secondary">{{parseDate
                ratingItem.ratingTime
              }}</small>
          </div>
        </div>
      </div>
      {{#unless ratingItem.last}}
        <hr />
      {{/unless}}
    {{/each}}
  </div>
</div>