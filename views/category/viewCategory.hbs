<section class="products">
    <div class="myContainer myContainer--py row">
        {{>category }}
        <div class="col-sm-12 col-md-10">
            <div class="products__near--end">
                {{#if this.empty}}
                <h1 style="text-align: center">Unavailable Items</h1>
                {{else}}
                <h1 class="products__title fw-bold">{{this.cateName}} </h1>
                <div class="products__content">
                    {{#each this.listProductByCategory}}
                    {{>product product=this}}
                    {{/each}}
                </div>
            </div>
            <nav class="products__pagination" aria-label="...">
                <ul class="pagination">

                    {{#each pages}}
                    {{#if isCurrent}}
                    <li class="page-item">
                        <a class="page-link" href="/category?catId={{cateId}}&page={{prev}}" tabindex="-1"><i class="fa fa-chevron-left" aria-hidden="true"></i></a>
                    </li>
                    {{/if}}
                    {{/each}}
                    {{#each pages}}

                    {{#if isCurrent}}
                    <li class="page-item active"><a class="page-link" href="javascript:;">{{value}}</a></li>
                    {{else}}
                    <li class="page-item"><a class="page-link"
                            href="/category?catId={{cateId}}&page={{value}}">{{value}}</a></li>
                    {{/if}}

                    {{/each}}
                    {{#each pages}}
                    {{#if isCurrent}}
                    <li class="page-item">
                        <a class="page-link" href="/category?catId={{cateId}}&page={{next}}"><i class="fa fa-chevron-right" aria-hidden="true"></i></a>
                    </li>
                    {{/if}}
                    {{/each}}

                </ul>
            </nav>
            {{/if}}


        </div>
    </div>
</section>