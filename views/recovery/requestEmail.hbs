{{! 
  Require fields:
  {
    alert (optional): {
      type
      message
    }
  }
}}
<section class="verify">
  <div class="row justify-content-center m-0">
    <div class="col-md-7 col-lg-5">
      <div class="auth-wrap p-2 p-md-5">
        <div class="d-flex">
          <div class="w-100">
            <h3>Forgot password</h3>
            <p class="mb-4">
              Tell us your email address, and we'll get you back on track in no
              time.
            </p>
          </div>
        </div>
        <!-- Verify Form -->
        <form
          id="requestEmailForm"
          action="/recovery/request-email"
          method="POST"
        >
          <div class="row">
            <!-- Verification Code -->
            <div class="input-group col-lg-12">
              <div class="input-group-prepend">
                <span class="input-group-text icon fa fa-envelope"></span>
              </div>
              <input
                id="email"
                type="email"
                name="email"
                placeholder="Your email address"
                class="form-control border-left-0 border-md"
                required
              />
            </div>
          </div>
        </form>
        {{#with alert}}
          <div class="alert alert-{{type}}" role="alert">
            {{message}}
          </div>
        {{/with}}
        <div class="row">
          <!-- Back Button -->
          <form class="col-lg-6 mx-auto" action="/auth/login" method="get">
            <button type="submit" class="btn btn-secondary btn-block py-2">
              Return to Sign in
            </button>
          </form>
          <!-- Submit Button -->
          <div class="col-lg-6 mx-auto">
            <button
              type="submit"
              form="requestEmailForm"
              class="btn btn-primary btn-block py-2 submit"
            >
              Submit
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>