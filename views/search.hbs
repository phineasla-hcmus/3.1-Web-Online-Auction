<section class="products">
    <div class="myContainer myContainer--py">
        <div class="mt-3">
            <p>
                <i class="fa fa-lightbulb-o" aria-hidden="true"></i>
                {{numberOfProducts}} products found for the keyword '<span class="text-danger">{{keyword}}</span>'</p>
            <div>
                Sort by:
                <select id="sort-option" name="sortby" class="selectbox">
                    <option style="display: none;">None</option>
                    <option value="by-expired-date">Descending expired date</option>
                    <option value="by-price">Ascending Price</option>
                </select>
            </div> 
        </div>  
        <div class="mt-5">
            <input id="nPages" type="hidden" value={{pages.length}}>
            {{#if this.empty}}
            <h1 style="text-align: center">Unavailable Items</h1>
            {{else}}

            {{!-- <h1 class="products__title">{{this.catName}} </h1> --}}
            <div id="products-search-result" class="products__search">
                {{#each this.listProductByKeyword as |product|}}
                    {{>product product=product user=../user}}
                {{/each}}
            </div>
        </div>
        <nav id="paginator" class="products__pagination" aria-label="...">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                {{#each pages}}
                    {{#if isCurrent}}
                        <li class="page-item active"><a class="page-link" href="javascript:;">{{value}}</a></li>
                    {{else}}
                        <li class="page-item"><a class="page-link"
                                href="/search?keyword={{../keyword}}&page={{value}}">{{value}}</a></li>
                    {{/if}}
                {{/each}}
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
        {{/if}}
    </div>
</section>

{{#section 'scripts'}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="module" src="/public/js/search.js"></script>
{{/section}}