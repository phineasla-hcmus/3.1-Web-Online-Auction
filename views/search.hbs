<section class="products">
    <div class="myContainer myContainer--py row">
        <div class="col-sm-2 px-0 hide-for-mobile">
            <ul class="list-group list-group-flush products-parent-categories">
                {{#each parentCategories as |parent|}}
                <li class="list-group-item list-group-item-action {{#if isActive}}active{{/if}}">
                    <a  href="#">
                    {{parent.catName}}
                    </a>
                    <ul class="products-child-categories">
                    {{#each ../childCategories as |child|}}
                    {{#if (isChildOf child.parentId parent.catId)}}
                    <li><a href="/category?catId={{child.catId}}">{{child.catName}}</a></li>
                    {{/if}}
                    {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{!-- <i class="fa fa-sort" aria-hidden="true"></i>
            Sort
            <form id="frmSort" action="/search" method="get"> --}}
                {{!-- <input name="keyword" type="hidden" value="{{this.keyword}}"> --}}
                {{!-- <div class="form-check">
                    <input name="sortBy" class="form-check-input" type="radio" value="expiredDate" id="expiredDate">
                    <label class="form-check-label" for="expiredDate">
                        Descending expired date
                    </label>
                </div>
                <div class="form-check">
                    <input name="sortBy" class="form-check-input" type="radio" value="price" id="price">
                    <label class="form-check-label" for="price">
                        Ascending price
                    </label>
                </div> --}}
                {{!-- <button class="btn header__btn" type="submit">Apply</button> --}}
            {{!-- </form> --}}
        </div>
        <div class="col-sm-10">
             <select id="sort-option" name="sortby" class="selectbox">
                <option value="all">All</option>
                <option value="by-rating">Highest rated</option>
                <option value="by-price">Lowest Price</option>
            </select>
            <div class="products__near--end">
                {{#if this.empty}}
                <h1 style="text-align: center">Unavailable Items</h1>
                {{else}}

                <h1 class="products__title">{{this.catName}} </h1>
                <div class="products__content owl-theme">
                    {{#each this.listProductByKeyword}}
                        {{>product product=this}}
                    {{/each}}
                </div>
            </div>
            <nav class="products__pagination" aria-label="...">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    {{#each pages}}
                        {{#if isCurrent}}
                            <li class="page-item active"><a class="page-link" href="javascript:;">{{value}}</a></li>
                        {{else}}
                            <li class="page-item"><a class="page-link"
                                 href="/category?catId={{cateId}}&page={{value}}">{{value}}</a></li>
                        {{/if}}
                    {{/each}}
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
            {{/if}}


        </div>
    </div>
</section>


